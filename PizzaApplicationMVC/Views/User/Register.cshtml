@model PizzaApplicationMVC.Models.UserDTO

@{
    ViewData["Title"] = "Register";
}

<title>UserRegistration</title>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/Create.css" />
<link rel="stylesheet" href="/css/site.css" />
@*<h1>Create</h1>
    <h4>UserDTO</h4>*@



<img src="~/Images/signpa.jpg" />
<div class="row">
    <h1> SIGN-UP</h1>
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Emailid" class="control-label"></label>*@
                <input asp-for="id" class="form-control" required placeholder="Email-Address" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Name" class="control-label"></label>*@
                <input asp-for="Name" class="form-control" required placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Password" class="control-label"></label>*@
                <input asp-for="Password" class="form-control" required placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="ConfirmPassword" class="control-label"></label>*@
                <input asp-for="ConfirmPassword" class="form-control" required placeholder="Confirm-Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Address" class="control-label"></label>*@
                <input asp-for="Address" class="form-control" required placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div>
                <h4>@ViewBag.Error</h4>
            </div>
            <div class="form-group">
                <a href="Login">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </a>
            </div>
        </form>
        <div class="form-group">
            <a href="/">
                <input type="submit" value="Go back" style="background-color: red; border-color: red" class="btn btn-danger" />
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
