@model PizzaApplicationMVC.Models.UserDTO

@{
    ViewData["Title"] = "Login";
}

<title>UserLogin</title>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/Login.css" />

<img src="~/images/Firstimage.jpg" />
<div class="row">
    <header> SIGN-IN</header>
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Emailid" class="control-label"></label>*@
                <span class="fa fa-user"></span>
                <input asp-for="id" class="form-control" required placeholder="Email-Address" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>

            <div class="form-group space">
                @*<label asp-for="Password" class="control-label"></label>*@
                <span class="fa fa-lock"></span>
                <input asp-for="Password" class="form-control" required placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group space">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <br />
            <br />
            <br />
            <div >
                <h5 class="error" style="color:red;font-size:18px;font-weight:bold">@ViewBag.Error</h5>

            </div>
            <div class="signup">
                Don't have account?<a href="/User/Register">Signup Now</a>

            </div>
        </form>
        <div class="form-group space">
            <a href="/" class="goback-button">Go back</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}